<h1><%= @article.title %></h1>
<p style="color: #C2C6CF">Tags: <%= tag_links(@article.tags) %></p>
<br>
<p><%= @article.body %></p>
<% if @article.image_file_name %><br><p><%= image_tag @article.image.url %></p><% end %>
<br>
<br>

<% if logged_in? %>
	<p>
		<ul>
			<li>
				<%= link_to "delete", article_path(@article), :method => :delete, :confirm => "Are you sure you want to delete it?" %> | <%= link_to "edit", edit_article_path(@article) %>
			</li>
		</ul>
	</p>
	<br>
<% end %>

<%= link_to "<< Back to Articles List", articles_path, :class => "new_article" %>
<br>

<h3>Comments (<%= @article.comments.count %>)</h3>
<%= render :partial => 'comment', :collection => @article.comments %>
<br>
<%= render :partial => 'comment_form' %>