!!!
%html
	%head
		%title Blogger Template
		= stylesheet_link_tag "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		- if flash[:notice]
			%p.flash
				= flash[:notice]
		= yield
		%hr
		%h6
			- if logged_in?
				= "Logged in as #{current_user.username}"
				= link_to "Log Out", logout_path
			- else
				= link_to "Log In", login_path